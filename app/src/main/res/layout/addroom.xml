<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backgroundtitle">
        <ImageView
            android:id="@+id/addroom_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加房间"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_black"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/addroom_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_00000000"
            android:text="添加"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/addroom_roomname_ed"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginTop="@dimen/dp_size_20"
        android:hint="请输入房间名"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_18"
        android:paddingLeft="@dimen/dp_size_5"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="@color/text_gray"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_10"/>
</LinearLayout >