<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_44">
        <TextView
            android:id="@+id/airqualityscene_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场景名称"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_gray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_20"/>
        <ImageView
            android:id="@+id/airqualityscene_item_scelet_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/share_account_hook"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/text_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"/>
    </RelativeLayout>
</LinearLayout>