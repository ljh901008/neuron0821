<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg">
    <RelativeLayout
        android:id="@+id/air_conditionoperate_top_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/air_conditionoperate_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_back"
            android:background="#00000000"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_5"/>
        <TextView
            android:id="@+id/air_conditionoperate_devicename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/air_conditionoperate_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/air_conditionoperate_roomname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间名"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:layout_below="@+id/air_conditionoperate_top_rll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_20"/>
    <TextView
        android:id="@+id/air_conditionoperate_wdnama_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标温度:"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:layout_below="@+id/air_conditionoperate_roomname_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_33"/>
    <TextView
        android:id="@+id/air_conditionoperate_temperaturevalue_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textColor="@color/white"
        android:textSize="90sp"
        android:layout_below="@+id/air_conditionoperate_wdnama_tv"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="@dimen/dp_size_18"
        android:layout_height="@dimen/dp_size_18"
        android:layout_below="@+id/air_conditionoperate_wdnama_tv"
        android:layout_toRightOf="@+id/air_conditionoperate_temperaturevalue_tv"
        android:src="@drawable/roundessbackground"
        android:layout_marginTop="@dimen/dp_size_20"/>
    <RelativeLayout
        android:id="@+id/air_conditionoperate_pattern_rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/air_conditionoperate_temperaturevalue_tv"
        android:layout_marginTop="@dimen/dp_size_15"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/air_conditionoperate_airpattern_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模式: 制冷"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_toLeftOf="@+id/air_conditionoperate_shuxian_iv"/>
        <ImageView
            android:id="@+id/air_conditionoperate_shuxian_iv"
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="@dimen/text_size_16"
            android:background="@color/white"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/air_conditionoperate_airspeed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风速: 低"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_toRightOf="@+id/air_conditionoperate_shuxian_iv"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/air_conditionoperate_operation_rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/air_conditionoperate_pattern_rll"
        android:layout_marginRight="@dimen/dp_size_100"
        android:layout_marginLeft="@dimen/dp_size_100"
        android:layout_marginTop="@dimen/dp_size_40">
        <ImageButton
            android:id="@+id/air_conditionoperate_add_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/air_temperature_add"
            android:background="#00000000"/>
        <ImageButton
            android:id="@+id/air_conditionoperate_minus_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/air_temperature_reduce"
            android:background="#00000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/air_conditionoperate_operation_rll"
        android:layout_marginTop="@dimen/dp_size_60"
        android:layout_marginRight="@dimen/dp_size_60"
        android:layout_marginLeft="@dimen/dp_size_60">
        <RelativeLayout
            android:id="@+id/air_conditionoperate_powersource_rll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/air_conditionoperate_powersource_ibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/air_temperature_open"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/air_conditionoperate_powersource_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/yellow"
                android:layout_below="@+id/air_conditionoperate_powersource_ibtn"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/air_conditionoperate_airpattern_rll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/air_conditionoperate_pattern_ibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/air_temperature_cold"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/air_conditionoperate_pattern_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="制冷"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/yellow"
                android:layout_below="@+id/air_conditionoperate_pattern_ibtn"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/air_conditionoperate_airspeed_rll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/air_conditionoperate_airspeed_ibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/air_temperature_speed"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/air_conditionoperate_airspeedtwo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风速:高"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/yellow"
                android:layout_below="@+id/air_conditionoperate_airspeed_ibtn"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_size_10"
            >
            <ImageView
                android:id="@+id/airserial_i1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_1"
                android:background="@color/white"/>
            <Button
                android:id="@+id/airserial_up_btn"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/airserial_i1"
                android:text="上一个"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"
                android:background="#1AFFFFFF"/>
        </RelativeLayout>
        <Button
            android:id="@+id/airserial_queding_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_0.3"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="21sp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_size_10"
            >
            <ImageView
                android:id="@+id/airserial_i2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_size_1"
                android:background="@color/white"/>
            <Button
                android:id="@+id/airserial_next_btn"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/airserial_i2"
                android:text="下一个"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"
                android:background="#1AFFFFFF"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>