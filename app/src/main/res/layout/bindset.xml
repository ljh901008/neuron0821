<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backgroundtitle">
        <ImageView
            android:id="@+id/bindset_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@mipmap/login_back"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="绑定设置"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_black_333333"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/bindset_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/device_1_rll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_shade">
                <RelativeLayout
                    android:id="@+id/bindset_akaiguan_title_rll"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">
                    <TextView
                        android:id="@+id/bindset_akaiguan_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/dp_size_20"
                        android:text="A键开关"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_bg"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_size_20"/>
                    <ImageView
                        android:id="@+id/bindset_akaiguan_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/binding_add"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_size_20"
                        android:paddingBottom="@dimen/dp_size_5"
                        android:paddingTop="@dimen/dp_size_5"
                        android:layout_marginRight="@dimen/dp_size_20"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewa_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:layout_below="@+id/bindset_akaiguan_title_rll"
                    android:background="@color/color_mefragment_xian_EEEEEE"
                    android:layout_centerHorizontal="true"/>
                <neuron.com.view.MyListview
                   android:id="@+id/bindset_akaiguan_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:layout_below="@+id/viewa_2"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bindset_device_2_rll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_10"
                android:layout_marginTop="@dimen/dp_size_10"
                android:background="@drawable/background_shade">
                <RelativeLayout
                    android:id="@+id/bindset_bkaiguan_title_rll"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    >
                    <TextView
                        android:id="@+id/bindset_bkaiguan_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/dp_size_20"
                        android:text="B键开关"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_bg"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_size_20"/>
                    <ImageView
                        android:id="@+id/bindset_bkaiguan_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/binding_add"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_size_20"
                        android:paddingBottom="@dimen/dp_size_5"
                        android:paddingTop="@dimen/dp_size_5"
                        android:layout_marginRight="@dimen/dp_size_20"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewb_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:layout_below="@+id/bindset_bkaiguan_title_rll"
                    android:background="@color/color_mefragment_xian_EEEEEE"
                    android:layout_centerHorizontal="true"/>
                <neuron.com.view.MyListview
                    android:id="@+id/bindset_bkaiguan_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:layout_below="@+id/viewb_2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bindset_device_3_rll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_size_10"
                android:background="@drawable/background_shade">
                <RelativeLayout
                    android:id="@+id/bindset_ckaiguan_title_rll"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    >
                    <TextView
                        android:id="@+id/bindset_ckaiguan_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C键开关"
                        android:paddingRight="@dimen/dp_size_20"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black_bg"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_size_20"/>
                    <ImageView
                        android:id="@+id/bindset_ckaiguan_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/binding_add"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_size_20"
                        android:paddingBottom="@dimen/dp_size_5"
                        android:paddingTop="@dimen/dp_size_5"
                        android:layout_marginRight="@dimen/dp_size_20"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewc_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:layout_below="@+id/bindset_ckaiguan_title_rll"
                    android:background="@color/color_mefragment_xian_EEEEEE"
                    android:layout_centerHorizontal="true"/>
                <neuron.com.view.MyListview
                    android:id="@+id/bindset_ckaiguan_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:layout_below="@+id/viewc_2"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>