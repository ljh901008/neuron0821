<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/childaccountmanageractivity_title_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backgroundtitle">
        <ImageView
            android:id="@+id/childaccountmanageractivity_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/login_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/childaccountmanageractivity_titlename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子帐号管理"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black_bg"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/childaccountmanageractivity_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:background="#00000000"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/childaccountmanageractivity_lv"
        android:layout_below="@+id/childaccountmanageractivity_title_rll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000">
    </com.baoyz.swipemenulistview.SwipeMenuListView>
    <FrameLayout
        android:id="@+id/childaccountmanageractivity_framely"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_44"
        android:layout_alignParentBottom="true"
        android:background="@color/text_white_FFFFFF"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/childaccountmanageractivity_allselect_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:background="#00000000"
                android:text="全选"
                android:textSize="@dimen/text_size_14"/>
            <Button
                android:id="@+id/childaccountmanageractivity_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:background="#00000000"
                android:text="删除"
                android:textSize="@dimen/text_size_14"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/childaccountmanageractivity_tishi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18"
        android:text="您没有子帐号,您可以添加一个子账号"
        android:textColor="@color/text_gray"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>