<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/devicestatuslist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备状态"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_15"/>
        <ImageView
            android:id="@+id/devicestatuslist_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/text_gray"
            android:layout_below="@+id/devicestatuslist_tv"
            android:layout_marginTop="@dimen/dp_size_10"/>
        <ListView
            android:id="@+id/devicestatuslist_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/white_00000000"
            android:layout_below="@+id/devicestatuslist_image"
            android:layout_marginTop="@dimen/dp_size_5">

        </ListView>
    </RelativeLayout>
</RelativeLayout>