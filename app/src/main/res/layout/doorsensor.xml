<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg">
    <RelativeLayout
        android:id="@+id/doorsensor_top_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/doorsensor_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_back"
            android:background="#00000000"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_5"/>
        <TextView
            android:id="@+id/doorsensor_devicename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/doorsensor_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/doorsensor_roomname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:layout_below="@+id/doorsensor_top_rll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_20"/>
    <ImageView
        android:id="@+id/doorsensor_deviceimage_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doorsensor_roomname_tv"
        android:layout_marginTop="49dp"
        android:src="@mipmap/magnetometer"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doorsensor_deviceimage_iv"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/doorsensor_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tv_open"
            />
        <TextView
            android:id="@+id/doorsensor_close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doorsensor_close_iv"
            android:text="关闭"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_size_15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_10"/>
    </RelativeLayout>
</RelativeLayout>