<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg">
    <RelativeLayout
        android:id="@+id/edit_top_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/edit_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_back"
            android:background="@color/white_00000000"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_5"/>
        <TextView
            android:id="@+id/edit_titlename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/edit_fonfirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入设备名称:"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_size_20"
        android:layout_marginLeft="@dimen/dp_size_10"/>
    <EditText
        android:id="@+id/edit_devicename_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_44"
        android:background="@color/white_00000000"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginTop="@dimen/dp_size_10"
        android:textColor="@color/white"
        android:hint="请输入设备名称"
        android:textColorHint="@color/white"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="@color/color_mefragment_xian_EEEEEE"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置房间:"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_size_20"
        android:layout_marginLeft="@dimen/dp_size_10"/>
    <RelativeLayout
        android:id="@+id/edit_selectroom_rll"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/edit_selectroom_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择房间"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:background="@color/white_00000000"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/color_mefragment_xian_EEEEEE"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_air_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_10"/>

    </RelativeLayout>

</LinearLayout>