<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ezcamerasecond_title_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backgroundtitle">
        <ImageView
            android:id="@+id/ezcamerasecond_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="第二步，连接Wifi"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/text_size_16"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/ezcamerasecond_tishi_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ezcamerasecond_title_rll"
        android:text="如果你使用的是双频路由器，请不要让摄像机连接5G频段的Wi—Fi"
        android:textColor="@color/black_bg"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_10"/>
    <TextView
        android:id="@+id/ezcamerasecond_wifiname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ezcamerasecond_tishi_tv"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="@dimen/dp_size_40"
        android:text="当前网络："
        android:textColor="@color/black_bg"
        android:textSize="@dimen/text_size_16"/>
    <EditText
        android:id="@+id/ezcamerasecond_wifipassword_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_40"
        android:layout_below="@+id/ezcamerasecond_wifiname_tv"
        android:layout_marginTop="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_40"
        android:layout_marginRight="@dimen/dp_size_10"
        android:background="@null"
        android:hint="请输入Wifi密码"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_16"/>
    <View
        android:id="@+id/ezcamerasecond_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_below="@+id/ezcamerasecond_wifipassword_ed"
        android:background="@color/gray_text"
        android:layout_marginLeft="@dimen/dp_size_30"
        android:layout_marginRight="@dimen/dp_size_20"/>
    <Button
        android:id="@+id/ezcamerasecond_next_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_44"
        android:layout_below="@+id/ezcamerasecond_view"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginTop="@dimen/dp_size_51"
        android:background="@drawable/login_button"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"/>

</RelativeLayout>