<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ezcaptureresult_title_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backgroundtitle">
        <ImageView
            android:id="@+id/ezcaptureresult_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="结果"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/text_size_16"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/ezcaptureresult_camera_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/equipment_camera"
        android:layout_below="@+id/ezcaptureresult_title_rll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_30"/>
    <TextView
        android:id="@+id/ezcaptureresult_wifi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ezcaptureresult_camera_iv"
        android:text="尚未连接网络"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/text_size_18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_size_10"/>
    <Button
        android:id="@+id/ezcaptureresult_connectionnet_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_44"
        android:layout_below="@+id/ezcaptureresult_wifi_tv"
        android:layout_marginTop="@dimen/dp_size_20"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:background="@drawable/login_button"
        android:text="连接网络"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"/>

</RelativeLayout>