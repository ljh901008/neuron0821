<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <neuron.com.view.CircleImageView
            android:id="@+id/hostmanagerdata_item_photo_iv"
            android:layout_width="@dimen/dp_size_44"
            android:layout_height="@dimen/dp_size_44"
            android:src="@mipmap/avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"/>
        <TextView
            android:id="@+id/hostmanagerdata_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hostmanagerdata_item_photo_iv"
            android:text="海贼王"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="@dimen/dp_size_15"
            android:layout_marginLeft="@dimen/dp_size_15"/>
        <TextView
            android:id="@+id/hostmanagerdata_item_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18888888888"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_14"
            android:layout_toRightOf="@+id/hostmanagerdata_item_photo_iv"
            android:layout_below="@+id/hostmanagerdata_item_name_tv"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginTop="@dimen/dp_size_5"/>
        <View
            android:id="@+id/hostmanagerdata_item_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="@color/color_login_account_bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>
</LinearLayout>