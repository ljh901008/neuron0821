<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/text_white_FFFFFF">
        <Button
            android:id="@+id/pic_photo_xc_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:text="相册"/>
        <View
            android:id="@+id/pic_photo_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pic_photo_xc_btn"
            android:background="@color/gray_text"/>
        <Button
            android:id="@+id/pic_photo_pz_btn"
            android:layout_below="@+id/pic_photo_view1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:text="拍照"/>
        <View
            android:id="@+id/pic_photo_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pic_photo_pz_btn"
            android:background="@color/gray_text"/>
        <Button
            android:id="@+id/pic_photo_clear_btn"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="40dp"
            android:text="取消"
            android:layout_below="@+id/pic_photo_view2"/>
    </RelativeLayout>

</RelativeLayout>