<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/scene_item_delete_iv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@mipmap/scen__delete"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/scene_item_bg_rll"
            android:background="#FEFEFE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/scene_item_delete_iv"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10">

            <ImageView
                android:id="@+id/scene_item_iv"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/login_button_1DDCBF"
                />
            <TextView
                android:id="@+id/scene_item_scenename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回家模式"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@+id/scene_item_iv"
                android:layout_marginLeft="@dimen/dp_size_18"
                android:layout_marginTop="@dimen/dp_size_15"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/scene_item_iv"
                android:layout_below="@+id/scene_item_scenename_tv"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/dp_size_10">
                <ImageView
                    android:id="@+id/scene_item_sceneclock_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/scen__clock"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/scene_item_scenetime_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/scene_item_sceneclock_iv"
                    android:layout_marginRight="70dp"
                    android:text="开启:7:00 重复 (周一、周日)"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_gray"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/scene_item_kaiguan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="未启用"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/scene_item_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_size_20"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>