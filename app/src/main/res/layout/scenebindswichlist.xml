<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backgroundtitle">
        <ImageView
            android:id="@+id/sceneswichlist_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/sceneswichlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择设备"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_black"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/sceneswichlist_queding_bnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white_00000000"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/sceneswichlist_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white_00000000"></ListView>
    <TextView
        android:id="@+id/sceneswichlist_tishi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="您没有绑定设备,请绑定设备!"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_18"
        android:layout_marginTop="200dp"
        android:visibility="gone"/>
</LinearLayout>