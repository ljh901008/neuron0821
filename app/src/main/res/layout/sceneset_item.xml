<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/sceneset_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/air_conditioner"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"/>
        <TextView
            android:id="@+id/sceneset_item_scenename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场景名称"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_toRightOf="@+id/sceneset_item_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:background="@color/white_0.3"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_air_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>

</LinearLayout>