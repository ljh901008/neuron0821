<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">
    <RelativeLayout
        android:id="@+id/scenetiming_top_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/scenetiming_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"
            android:background="#00000000"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_5"/>
        <TextView
            android:id="@+id/scenetiming_titlename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时设置"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/scenetiming_fonfirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_black"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scenetiming_open_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启时间:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_30"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/timing_more"
            android:layout_marginRight="@dimen/dp_size_15"/>
        <TextView
            android:id="@+id/scenetiming_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_40"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="#33CCCCCC"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_size_15"
            android:layout_marginLeft="@dimen/dp_size_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scenetiming_cf_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_10">
        <TextView
            android:id="@+id/scenetiming_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时模式:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_30"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/timing_more"
            android:layout_marginRight="@dimen/dp_size_15"/>
        <TextView
            android:id="@+id/scenetiming_cfname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16"
            android:layout_toRightOf="@+id/scenetiming_model"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_18"
            android:layout_marginRight="@dimen/dp_size_40"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:background="#33CCCCCC"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_size_15"
            android:layout_marginLeft="@dimen/dp_size_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scenetiming_deltime_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_44"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_size_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除定时"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>