<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg">
    <RelativeLayout
        android:id="@+id/airqualityedit_top_rll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/swichedit_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_back"
            android:background="#00000000"
            android:padding="@dimen/dp_size_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_5"/>
        <TextView
            android:id="@+id/swichedit_titlename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开关编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/swichedit_fonfirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_20">
        <TextView
            android:id="@+id/swichedit_dname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_size_18"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/swichedit_devicename_ed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_33"
            android:layout_toRightOf="@+id/swichedit_dname_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:background="@color/white_00000000"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/white_0.3"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/swichedit_roomname_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_10">
        <TextView
            android:id="@+id/swichedit_rname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间名称:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_size_18"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/swichedit_roomname_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/swichedit_rname_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:text="房间名"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white_00000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/white_0.3"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginRight="@dimen/dp_size_15"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_air_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/swichedit_swichone_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_10">
        <TextView
            android:id="@+id/swichedit_swichone_lname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开关A键:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_size_18"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/swichedit_swichone_lightname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/swichedit_swichone_lname_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:text="灯1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white_00000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/white_0.3"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginRight="@dimen/dp_size_15"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_air_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/swichedit_swichtwo_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_10">
        <TextView
            android:id="@+id/swichedit_swichtwo_lname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开关B键:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_size_18"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/swichedit_swichtwo_lightname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/swichedit_swichtwo_lname_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:text="灯2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white_00000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/white_0.3"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginRight="@dimen/dp_size_15"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_air_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/swichedit_swichthree_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48"
        android:layout_marginTop="@dimen/dp_size_10">
        <TextView
            android:id="@+id/swichedit_swichthree_lname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开关C键:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_size_18"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/swichedit_swichthree_lightname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/swichedit_swichthree_lname_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:text="灯3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white_00000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/white_0.3"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:layout_marginRight="@dimen/dp_size_15"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/home_air_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_15"/>
    </RelativeLayout>

</LinearLayout>