<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_15"/>
        <TextView
            android:id="@+id/help_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_title"
            android:lineSpacingExtra="@dimen/dp_size_5"
            android:text="第一步:点击学习按钮进入学习面板\n第二步:电视遥控面板操作一个按钮手机\n面板上跟着按一个按钮,即为学习成功\n第三步:完成学习后点击退出按钮"
            android:textColor="@color/text_black_333333"
            android:textSize="@dimen/text_size_16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_15"/>
        <ImageView
            android:id="@+id/help_img"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/help_one"
            android:background="#CCCCCC"
            android:layout_marginTop="@dimen/dp_size_10"/>
        <Button
            android:id="@+id/help_close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_img"
            android:text="关闭"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/text_size_18"
            android:background="@color/white_00000000"
            />
    </RelativeLayout>

</LinearLayout>